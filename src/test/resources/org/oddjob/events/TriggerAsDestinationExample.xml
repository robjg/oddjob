<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
    <job>
        <bus:bus xmlns:bus="oddjob:beanbus">
            <of>
                <bus:driver>
                    <values>
                        <list>
                            <values>
                                <value value="1"/>
                                <value value="2"/>
                                <value value="3"/>
                                <value value="4"/>
                            </values>
                            <elementType>
                                <class name="java.lang.Integer"/>
                            </elementType>
                        </list>
                    </values>
                </bus:driver>
                <bus:filter id="filter">
                    <predicate>
                        <bean class="org.oddjob.events.OutboundEventSourceTest$OnlyThree"/>
                    </predicate>
                </bus:filter>
                <events:trigger beDestination="true" id="trigger" xmlns:events="oddjob:events">
                    <jobs>
                        <echo id="result">
                            <![CDATA[Result: ${trigger.trigger}]]>
                        </echo>
                    </jobs>
                </events:trigger>
            </of>
        </bus:bus>
    </job>
</oddjob>
