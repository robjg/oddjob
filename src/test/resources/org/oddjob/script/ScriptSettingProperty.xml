<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
    <job>
        <sequential>
            <jobs>
                <script id="s" language="JavaScript">
                    <bind>
                        <value key="vars" value="${v}"/>
                    </bind><![CDATA[vars.set('today', new java.util.Date());
]]></script>
                <variables id="v">
                    <formattedToday>
                        <format date="${v.today}" format="yyyyMMdd"/>
                    </formattedToday>
                </variables>
            </jobs>
        </sequential>
    </job>
</oddjob>
