<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
    <job>
        <bean-bus id="bean-bus">
            <parts>
                <bus:iterable-driver xmlns:bus="oddjob:beanbus">
                    <beans>
                        <list>
                            <values>
                                <value value="Apple"/>
                                <value value="Orange"/>
                                <value value="Banana"/>
                            </values>
                        </list>
                    </beans>
                    <to>
                        <value value="${before}"/>
                    </to>
                </bus:iterable-driver>
                <bus:capture id="before" name="Beans Before"  xmlns:bus="oddjob:beanbus">
                    <to>
                        <value value="${only-filter}"/>
                    </to>
                </bus:capture>
                <bus:limit id="only-filter" limit="2" stopBus="true" xmlns:bus="oddjob:beanbus">
                    <to>
                        <value value="${results}"/>
                    </to>
                </bus:limit>
                <bus:capture id="results" name="Beans AFter" xmlns:bus="oddjob:beanbus"/>
            </parts>
        </bean-bus>
    </job>
</oddjob>
