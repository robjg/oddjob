<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
    <job>
        <bus:bus id="bean-bus" xmlns:bus="oddjob:beanbus">
            <of>
                <bus:driver>
                    <values>
                        <list>
                            <values>
                                <value value="Apple"/>
                                <value value="Banana"/>
                                <value value="Pear"/>
                            </values>
                        </list>
                    </values>
                </bus:driver>
                <bus:filter>
                    <predicate>
                        <value value="#{ function(x) { return x != 'Banana' }}"/>
                    </predicate>
                </bus:filter>
                <bus:collect id="results"/>
            </of>
        </bus:bus>
    </job>
</oddjob>
