<arooa:descriptor xmlns:arooa="http://rgordon.co.uk/oddjob/arooa"
                  namespace="oddjob:beanbus" prefix="bus">
    <components>
        <arooa:bean-def element='bus'
                        className='org.oddjob.beanbus.bus.BasicBusService'/>
        <arooa:bean-def element='driver'
                        className='org.oddjob.beanbus.drivers.IterableBusDriver'/>
        <arooa:bean-def element='collect'
                        className='org.oddjob.beanbus.destinations.BeanCapture'/>
        <arooa:bean-def element='filter'
                        className='org.oddjob.beanbus.destinations.BeanFilter'/>
        <arooa:bean-def element='limit'
                        className='org.oddjob.beanbus.destinations.BusLimit'/>
        <arooa:bean-def element='map'
                        className='org.oddjob.beanbus.destinations.BusMap'/>
        <arooa:bean-def element='queue'
                        className='org.oddjob.beanbus.destinations.BusQueue'/>
    </components>
</arooa:descriptor>